{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
	<h2 class="my-3">Referenzwerke</h2>
	<dl class="row">
	    {% for reference in references %}
		<dt class="col-sm-3">{{ reference.short }}</dt>
		<dd class="col-sm-9">{% if reference.author %}{{ reference.author }}: {% endif %}{{ reference.title }}</dd>
	    {% endfor %}
	</dl>
    </div>
{% endblock %}
