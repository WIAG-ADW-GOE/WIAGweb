{# parameter: references (type Canon) #}
{% if references is defined and references|length > 0 %}
    {% for cnref in references %}
	{% set refid = cnref.idinreference %}
	{% set refuri %}{% if cnref.reference.onlineresource %}{{ cnref.reference.onlineresource }}{% else %}{{ path('canon_reference', {'id': cnref.reference.id }) }}{% endif %}{% endset %}
	{% set refdisplaytitle=cnref.reference.shorttitle %}
	{% if cnref.isbio and cnref.status == 'online' %}
	    <div custom-style="Compact">{{ refdisplaytitle }}, S. {% for p in cnref.pages %}{{ p.page }}{%if not loop.last %},{% endif %}{% endfor %}</div>
	{% elseif isgs %}
	    <div custom-style="Compact">{{ refdisplaytitle }}, {% if refid %} S. {{ cnref.pagereference|raw }}, ID/Nr. {{ refid }}. {% else %} S. {{ cnref.pagereference|raw }}. {% endif %}<strong>Biogramm in Printpublikation vorhanden</strong></div
	{% else %}
	    <div custom-style="Compact">{{ refdisplaytitle }}{% if cnref.pagereference %}, S. {{ cnref.pagereference }}{% if refid %}, ID/Nr. {{ refid }}{% endif %}{% else %}{% if refid %}, ID/Nr. {{ refid }}{% endif %}{% endif %}</div>
	{% endif %}
    {% endfor %}
{% endif %}
